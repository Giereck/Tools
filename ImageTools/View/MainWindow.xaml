<controls:MetroWindow x:Class="ImageTools.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:view="clr-namespace:ImageTools.View"
                      Title="Agk Image Tools" 
                      SizeToContent="Height"
                      Width="525"
                      DataContext="{Binding MainViewModel, Source={StaticResource Locator}}"
                      GlowBrush="Black"
                      WindowTitleBrush="DarkRed">
    <Grid>
        <TabControl>
            <TabControl.Items>
                <TabItem Header="Compress">
                    <view:CompressImagesView Margin="10" />
                </TabItem>
                <TabItem Header="SelectFolder">
                    <view:SelectFolderView Margin="10" />
                </TabItem>
            </TabControl.Items>
        </TabControl>
    </Grid>
</controls:MetroWindow>

